name: Deploy to Cloud Run
on:
  push: { branches: [ "main" ] }
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    permissions: { contents: read, id-token: write }

    steps:
      - uses: actions/checkout@v4

      - uses: google-github-actions/auth@v2
        with:
          credentials_json: ${{ secrets.GCP_SA_KEY }}

      - uses: google-github-actions/setup-gcloud@v2
        with:
          project_id: ${{ secrets.GCP_PROJECT_ID }}

      - name: Configure Artifact Registry Docker
        run: gcloud auth configure-docker ${{ secrets.GCP_REGION }}-docker.pkg.dev --quiet

      - name: Build & push image
        env:
          IMAGE: ${{ secrets.GCP_REGION }}-docker.pkg.dev/${{ secrets.GCP_PROJECT_ID }}/cloud-run-source-deploy/${{ github.repository }}:${{ github.sha }}
        run: |
          docker build -t "$IMAGE" .
          docker push "$IMAGE"

      - name: Deploy to Cloud Run
        env:
          SERVICE_NAME: ai-workflow-automator
          REGION: ${{ secrets.GCP_REGION }}
          PROJECT_ID: ${{ secrets.GCP_PROJECT_ID }}
          IMAGE: ${{ secrets.GCP_REGION }}-docker.pkg.dev/${{ secrets.GCP_PROJECT_ID }}/cloud-run-source-deploy/${{ github.repository }}:${{ github.sha }}
        run: |
          gcloud run deploy $SERVICE_NAME \
            --image "$IMAGE" \
            --region "$REGION" \
            --project "$PROJECT_ID" \
            --platform managed \
            --allow-unauthenticated \
            --port 8080 \
            --set-env-vars OPENAI_MODEL=${{ secrets.OPENAI_MODEL }},MANUAL_SECONDS_PER_DOC=${{ secrets.MANUAL_SECONDS_PER_DOC }} \
            --set-secrets OPENAI_API_KEY=OPENAI_API_KEY:latest \
            --set-secrets GOOGLE_APPLICATION_CREDENTIALS_JSON=GCP_SA_KEY:latest
